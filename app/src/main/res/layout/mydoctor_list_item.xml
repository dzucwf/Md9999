<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/border_bottom"

    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingLeft="6dp"
    android:paddingRight="6dp"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/myDoctor_fragment_listItem_dr_photo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/photo_default_doctor" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:gravity="center_vertical">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/myDoctor_fragment_listItem_dr_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="郭晶晶"
                android:textStyle="bold"
                android:textColor="#2d2d2d" />

            <TextView
                android:id="@+id/myDoctor_fragment_listItem_dr_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_marginLeft="10dp"
                android:text="主治医师"
                android:background="#ff4612"
                android:textColor="#fff"
                android:padding="2dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="6dp">

            <TextView
                android:id="@+id/myDoctor_fragment_listItem_dr_hospital"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="山东省眼科医院" />
            <TextView
                android:id="@+id/myDoctor_fragment_listItem_dr_department"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="眼科"
                android:layout_marginLeft="6dp" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>  

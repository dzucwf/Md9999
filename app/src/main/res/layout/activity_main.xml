<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MainActivity">


    <android.support.v4.view.ViewPager
        android:id="@+id/navi_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/navi_switcher"
        android:layout_alignParentTop="true"

        android:layout_marginBottom="-7dp"
        android:padding="0dip" />

    <FrameLayout
        android:id="@+id/mainContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/navi_view_pager"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="74dp"></FrameLayout>






    <LinearLayout
        android:id="@+id/navi_switcher"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/border_top"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/navi_switcher_item_service"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onNaviCheck"
            android:src="@drawable/data" />
        <ImageButton
            android:id="@+id/navi_switcher_item_health"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onNaviCheck"

            android:src="@drawable/patient" />
        <ImageButton
            android:id="@+id/navi_switcher_item_doctor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onNaviCheck"
            android:src="@drawable/data" />
        <ImageButton
            android:id="@+id/navi_switcher_item_mine"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onNaviCheck"
            android:src="@drawable/data" />
    </LinearLayout>
</RelativeLayout>
